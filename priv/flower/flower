#!/opt/drop-pyenv/bin/python
#
# Flow creater worker
#
# params
# $1 - path to var data


import sys
import time
import json
import os


# API


def read():
    line = sys.stdin.readline()
    return line.strip()


def log(m):
    sys.stderr.write("{}: {}\n".format(time.time(), m))
    sys.stderr.flush()


def send(m):
    sys.stdout.write("{}\n".format(m))
    sys.stdout.flush()


# Process - actor
#  read - recieve message from world
#  send - send message to world
#  log  -  logging anything


_SPLIT_MSG_SEQ = "\tncm\t"


def get_command(p, args):

    # system::%local%::%name%::%cook%

    node = None
    raw = args[:]

    if len(args) == 4:
        node = args.pop(1)

    try:

        with open(p + args[1] + ".json") as f:
            d = json.loads(f.read())

            if args[2] == "start":
                _start = d["start_scene"]
            else:
                _start = args[2]

            _d = []
            for x in d["scenes"]:
                if x["name"] == _start:
                    _d = x["cook"]
                    break

            if node is None:
                return [x[1] for x in sorted([(x["num"], x["cmd"]) for x in _d])]

            else:
                return ["::".join([y
                                   for y in ["system", node] + x[1].split("::")[2:]])
                        for x in sorted([(x["num"], x["cmd"]) for x in _d])]

    except:
        # raw cmd
        return ["::".join(raw)]


def main(p):

    if not os.path.exists(p):
        os.makedirs(p)

    while 1:

        log("start working..")

        msg = read()
        if not msg:
            break

        log("get message: " + msg)

        if msg.startswith("system::"):

            # system msg
            args = msg.split("::")

            if args[1] in ["error", "timeout"]:
                log("recieve error: " + msg)
                send("ok")

            else:
                read_json(p, args)

        else:
            send("ok")


def read_json(p, args):
    cmds = []
    for x in get_command(p, args):
        cmds.append(x)

    log("send to api: " + _SPLIT_MSG_SEQ.join(cmds))
    send(_SPLIT_MSG_SEQ.join(cmds))

if __name__ == "__main__":
    main(sys.argv[1])
